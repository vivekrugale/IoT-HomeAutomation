<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="#EFC693"
            android:text="IoT Home Automation"
            android:textAlignment="center"
            android:textColor="#A12C06"
            android:textSize="30sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="30dp"
            android:background="#ECC34A"
            android:text="Living Room"
            android:textColor="#656060"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewLR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/textView6"
            android:background="#B3EAAF"
            android:text=" Normal"
            android:textColor="#393737"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="20dp"
            android:text="Temperature (C)"
            android:textColor="#000000"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textViewTemp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textView6"
            android:layout_marginRight="40dp"
            android:text="Celsius"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="17dp"
            android:text="Humidity (%)"
            android:textColor="#000000"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textViewHum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTemp"
            android:layout_alignStart="@id/textViewTemp"
            android:layout_marginTop="17dp"
            android:text="Percent"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="20dp"
            android:background="#83F47B"
            android:text="  Fan Status "
            android:textColor="#323131"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textViewLRFanStatus"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="#E4C36A"
            android:text="NA"
            android:textAlignment="center"
            android:textColor="#323131"
            android:textSize="22sp"
            android:layout_toRightOf="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnLRON"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#8BC34A"
            android:text="ON"
            android:textSize="16sp"
            android:layout_below="@+id/textView3"
            android:layout_alignStart="@id/textViewTemp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btnLROFF"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#F86E43"
            android:text="OFF"
            android:textSize="16sp"
            android:layout_below="@+id/textView3"
            android:layout_toRightOf="@id/btnLRON"
            android:layout_marginTop="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/btnLROFF"
            android:layout_marginTop="30dp"
            android:background="@color/border"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ECC34A"
            android:text="Kitchen"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/textViewKitchen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#B3EAAF"
            android:text="Normal"
            android:textColor="#393737"
            android:textSize="24sp"
            android:layout_below="@+id/textView4"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/textView5"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gas"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textViewGas"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Composition"
            android:textSize="22sp"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/textViewTemp"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="#83f47b"
            android:text=" Alarm Status"
            android:textColor="#323131"
            android:textSize="22sp"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textViewKitchenAlarm"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#E4C36A"
            android:text="NA"
            android:textAlignment="center"
            android:textColor="#323131"
            android:textSize="22sp"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textView10"/>

        <Button
            android:id="@+id/btnKitchenON"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#8BC34A"
            android:text="ON"
            android:textSize="16sp"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@id/textViewTemp" />

        <Button
            android:id="@+id/btnKitchenOFF"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#F86343"
            android:text="OFF"
            android:textSize="16sp"
            android:layout_below="@+id/textView8"
            android:layout_toRightOf="@+id/btnKitchenON"
            android:layout_marginTop="20dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/btnKitchenOFF"
            android:layout_marginTop="30dp"
            android:background="@color/border"/>

        <TextView
            android:id="@+id/textViewMQ1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ECC34A"
            android:text="Garden"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/textViewMQ2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#B3EAAF"
            android:text="Normal"
            android:textColor="#393737"
            android:textSize="24sp"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/textViewMQ1"/>

        <TextView
            android:id="@+id/textViewMQ3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Air Quality"
            android:textColor="#000000"
            android:textSize="22sp"
            android:layout_below="@+id/textViewMQ1"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textViewMQ4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AQI"
            android:textSize="22sp"
            android:layout_below="@+id/textViewMQ1"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/textViewTemp"/>

        <TextView
            android:id="@+id/textViewMQ5"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="#83f47b"
            android:text=" LED Status"
            android:textColor="#323131"
            android:textSize="22sp"
            android:layout_below="@+id/textViewMQ3"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/textViewMQ6"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#E4C36A"
            android:text="NA"
            android:textAlignment="center"
            android:textColor="#323131"
            android:textSize="22sp"
            android:layout_below="@+id/textViewMQ3"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/textViewMQ5"/>

        <Button
            android:id="@+id/btnMQ1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#8BC34A"
            android:text="ON"
            android:textSize="16sp"
            android:layout_below="@+id/textViewMQ3"
            android:layout_marginTop="20dp"
            android:layout_alignStart="@+id/textViewTemp"/>

        <Button
            android:id="@+id/btnMQ2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="#F86343"
            android:text="OFF"
            android:textSize="16sp"
            android:layout_below="@+id/textViewMQ3"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/btnMQ1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/btnMQ2"
            android:layout_marginTop="30dp"
            android:background="@color/border"/>

    </RelativeLayout>

</ScrollView>